<h2>プロフィール編集</h2>
<%= form_with model: @user, url: update_user_path(@user), method: :patch do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  
  <%= f.submit "変更を保存" %>
<% end %>

<% if @user.profile_image.attached? %>
  <%= image_tag @user.get_profile_image(200, 200) %> <!-- ここでリサイズしたサイズを指定 -->
<% else %>
  <%= image_tag 'sample-author1.jpg' %> <!-- デフォルト画像が表示される場合の表示 -->
<% end %>